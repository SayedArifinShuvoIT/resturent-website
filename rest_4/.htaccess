# Enable Rewrite Engine

RewriteEngine On

# Redirect all errors to the homepage

ErrorDocument 401 https://ayambakar7saudara.com/
ErrorDocument 403 https://ayambakar7saudara.com/
ErrorDocument 404 https://ayambakar7saudara.com/
ErrorDocument 500 https://ayambakar7saudara.com/

# Redirect to HTTPS and non-www in a single rule

RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^www\.ayambakar7saudara\.com$ [NC]
RewriteRule ^ https://ayambakar7saudara.com%{REQUEST_URI} [L,R=301]

# Redirect www to non-www if already using HTTPS

RewriteCond %{HTTPS} on
RewriteCond %{HTTP_HOST} ^www\.ayambakar7saudara\.com$ [NC]
RewriteRule ^ https://ayambakar7saudara.com%{REQUEST_URI} [L,R=301]

# Ensure no further processing if already at the correct URL

RewriteCond %{HTTPS} on
RewriteCond %{HTTP_HOST} ^ayambakar7saudara\.com$ [NC]
RewriteRule ^ - [L]
